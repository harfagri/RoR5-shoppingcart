.col-md-3.no-padding.inline-block.in-top
	%nav.medium
		.white-text.blue.col-md-12
			Admin general
.col-md-9.inline-block.in-top
	.card.large-padding
		.col-md-9.inline-block
			%h1= @product.name
		.col-md-3.inline-block
			%h2.big.no-margin.red-text 
				=@product.sales_total
				$
		%nav.top-space
			=link_to product_path(id: @product.id,client:true), class:"other-grey large-padding text-center col-md-4 inline-block" do
				Ver como cliente
			=link_to edit_product_path(@product), class:"other-grey large-padding text-center col-md-4 inline-block" do
				Editar Producto
			=link_to @product,method: :delete, class:"other-grey large-padding text-center col-md-4 inline-block",:"data-confirm" => "Confirmar eliminacion del Producto" do
				Eliminar Producto
		%div
			%h3.grey-text Archivos
			%ol
				-@product.attachments.each do |attachment|
					%li.large-padding.medium.white-text.grey
						.col-xs-11.inline-block= link_to attachment.archivo_file_name, attachment
						.col-xs-1.inline-block
							=link_to attachment, method: :delete,:"data-confirm" => "Confirmar eliminacion del Producto",class:"red-text" do
								X

			= render "attachments/form", product_id: @product.id
				
			